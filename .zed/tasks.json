[
  {
    "label": "DSL: Validate Form",
    "command": "cargo",
    "args": [
      "run",
      "-p",
      "ob-poc-web",
      "--",
      "dsl",
      "validate",
      "--file",
      "$ZED_FILE",
      "--row",
      "$ZED_ROW",
      "--column",
      "$ZED_COLUMN",
    ],
    "tags": ["dsl-form", "dsl-form-with-binding"],
    "reveal": "always",
  },
  {
    "label": "DSL: Format File",
    "command": "cargo",
    "args": ["run", "-p", "ob-poc-web", "--", "dsl", "fmt", "$ZED_FILE"],
    "reveal": "never",
  },
  {
    "label": "DSL: Dump Tree-sitter AST",
    "command": "npx",
    "args": ["tree-sitter", "parse", "$ZED_FILE"],
    "reveal": "always",
  },
  {
    "label": "DSL: Run Tree-sitter Corpus Tests",
    "command": "npx",
    "args": ["tree-sitter", "test"],
    "cwd": "rust/crates/dsl-lsp/tree-sitter-dsl",
    "reveal": "always",
  },
  {
    "label": "DSL: Regenerate Tree-sitter Grammar",
    "command": "npx",
    "args": ["tree-sitter", "generate"],
    "cwd": "rust/crates/dsl-lsp/tree-sitter-dsl",
    "reveal": "always",
  },
]
